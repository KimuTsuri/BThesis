/// \file K2ActionInitialization.cc
/// \brief Implementation of the K2ActionInitialization class

#include "K2ActionInitialization.hh"
#include "K2PrimaryGeneratorAction.hh"
#include "K2RunAction.hh"
#include "K2EventAction.hh"
#include "K2SteppingAction.hh"

//....oooOO0OOooo........oooOO0OOooo........oooOO0OOooo........oooOO0OOooo......

K2ActionInitialization::K2ActionInitialization(K2DetectorConstruction* detConstruction)
  : G4VUserActionInitialization(),
    fDetConstruction(detConstruction)
{}

//....oooOO0OOooo........oooOO0OOooo........oooOO0OOooo........oooOO0OOooo......

K2ActionInitialization::~K2ActionInitialization()
{}

//....oooOO0OOooo........oooOO0OOooo........oooOO0OOooo........oooOO0OOooo......

void K2ActionInitialization::BuildForMaster() const
{
  SetUserAction(new K2RunAction);
}

//....oooOO0OOooo........oooOO0OOooo........oooOO0OOooo........oooOO0OOooo......

void K2ActionInitialization::Build() const
{
  SetUserAction(new K2PrimaryGeneratorAction);
  SetUserAction(new K2RunAction);

  K2EventAction* eventAction = new K2EventAction;
  SetUserAction(eventAction);

  SetUserAction(new K2SteppingAction(fDetConstruction, eventAction));
}

//....oooOO0OOooo........oooOO0OOooo........oooOO0OOooo........oooOO0OOooo......
